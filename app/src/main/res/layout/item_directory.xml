<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemContainer"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?android:listPreferredItemHeight"
    android:background="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:minHeight="?android:listPreferredItemHeight"
    tools:background="@color/md_blue_800">

    <View
        android:id="@+id/ribbon"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="?colorPrimaryDark"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        tools:background="@color/md_red_300"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        android:textColor="@color/md_light_primary_text"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:background="@color/md_green_200" />

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/txtNext"
        app:iiv_icon="faw-angle-right"
        app:iiv_color="@color/md_black_1000"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="30dp"
        android:layout_gravity="center_vertical" />

</LinearLayout>